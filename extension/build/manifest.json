{
  "manifest_version": 3,
  "name": "BotBlocker Extension",
  "version": "1.0.0",
  "description": "The extension for the BotBlocker app",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "scripting", "storage", "webNavigation"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  }
}